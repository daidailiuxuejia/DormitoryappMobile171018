<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <!-- 底部布局 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/linearlayoutBean1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="5dip" >
                <ImageView
                    android:id="@+id/imageBean1Pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_goods_image_240" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textTitleBean1Name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="生活必备"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/textDesc1Bean1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="优惠指南"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/textDesc2Bean1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:singleLine="true"
                        android:text="生活必须品"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayoutBean2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:background="#FFFFFF"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imageBean2Pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_goods_image_240" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dip"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textTitleBean2Name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="人气团购"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/textDesc1Bean2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="劲爆单品"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/textDesc2Bean2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:singleLine="true"
                        android:text="大盘点"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/linearlayoutBean3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:background="#FFFFFF"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imageBean3Pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_goods_image_240" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textTitleBean3Name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="团购狂欢"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/textDesc1Bean3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="品牌团疯"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/textDesc2Bean3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:singleLine="true"
                        android:text="狂购"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayoutBean4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:padding="5dip"
                android:background="#FFFFFF"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imageBean4Pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_goods_image_240" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textTitleBean4Name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="1号生鲜"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/textDesc1Bean4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="帝都生鲜"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/textDesc2Bean4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:singleLine="true"
                        android:text="品优惠购"
                        android:textColor="#505050"
                        android:textSize="13dp" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>