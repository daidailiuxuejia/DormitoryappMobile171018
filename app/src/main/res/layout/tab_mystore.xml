<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <!-- 首页TOP -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#D9434E"
        android:orientation="horizontal"
        android:padding="5dip" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:text="个人管理"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
        <Button
            android:id="@+id/buttonRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/num"
            android:gravity="center_vertical"
            android:padding="3dip"
            android:visibility="invisible"
            android:text="用户注册"
            android:textSize="10dp" />
    </RelativeLayout>

    <!-- 滚动视图 -->
    <ScrollView
        android:id="@+id/SView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/linearLayoutNOLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/login_title_bg"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎使用"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />
                <Button
                    android:id="@+id/buttonLoginSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/login_submit_button"
                    android:text="立即登录"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutYesLogin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:visibility="gone" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/imageMyAvator"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/image_background"
                        android:padding="5dip"
                        android:src="@drawable/default_user_portrait" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical"
                    android:padding="5dip" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用名昵称:"
                            android:textColor="#6D6D6D"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/textMyUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KingKong"
                            android:textColor="#6D6D6D"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/num"
                        android:orientation="horizontal" >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:visibility="invisible"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="消费"
                                android:textColor="#6D6D6D"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/textMyPoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="#CC1212"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dip"
                            android:layout_height="fill_parent"
                            android:background="@drawable/product_summary_tab_item_title_bg" />
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:visibility="invisible"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录"
                                android:textColor="#6D6D6D"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/textMyPredepoit"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="￥ 66643.0"
                                android:textColor="#CC1212"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--  -->
            <net.common.android.ui.custom.MyListView
                android:id="@+id/mystoreListView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"
                android:listSelector="#00000000" 
                android:layout_marginBottom="10dip"/>
            <Button
		        android:id="@+id/buttonLoingOut"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:layout_marginTop="20dip"
		        android:background="@drawable/add_to_car_button_normal"
		        android:padding="10dip"
		        android:text="退出当前账号"
		        android:visibility="gone"
		        android:textColor="#FFFFFF"
		        android:textSize="16dp"
		        android:layout_marginBottom="10dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>